/* pages/treehool/treehool.wxss */
page{
  background-color:rgba(118, 118, 128,0.12); 
}
.tipbar{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.tipbar>view{
  width: 25%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 20rpx;
  font-size: 32rpx;
  font-weight: 600;
}
.tipbar image{
  width: 140rpx;
  height: 140rpx;
}
.mes-list{
  width: 100%;
  border-radius: 30rpx;
  background-color: white;
  box-shadow: 0 4rpx 10rpx rgba(118, 118, 128,0.6);
}
.mes-content{
  width: 84%;
  margin: 0 auto;
  display: flex;
  flex-direction: column;
  justify-content: start;
  align-items: center;
}
.mes-tip{
  width: 100%;
  font-size: 42rpx;
  font-weight: 700;
  margin-top: 4%;
}
.mes-text{
  width: 100%;
  font-size: 34rpx;
  border-top:2rpx rgba(170,170,170,0.4) solid;
  border-bottom: 2rpx rgba(170,170,170,0.4) solid;
  font-weight: 500;
  padding: 18rpx 0;
}
.mes-bar{
  width: 100%;
  margin: 8rpx 0;
}
.mes-time{
  font-size: 24rpx;
  color: rgba(170,170,170,1);
  float: left;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.mes-collectAndcomment{
  font-size: 24rpx;
  float: right;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-right: 18rpx;
}
.mes-collectAndcomment>image{
  margin: 0 12rpx;
}
.collect-img{
  width: 36rpx;
  height: 40rpx;
}
.comment-img{
  width: 32rpx;
  height: 38rpx;
}
.publish-img{
  width: 100rpx;
  height: 100rpx;
  position: fixed;
  bottom: 10%;
  right: 6%;
}
.comment-window{
  position: fixed;
  top: 25%;
  width: 100%;
  height: 100%;
  background-color: #E5E5E5;
}
.comment-input{
  width: 90%;
  margin: 0 auto;
  background-color: white;
  height: 30%;
  box-shadow: 6rpx 6rpx 30rpx rgba(118, 118, 128,0.6);
  border-radius: 20rpx;
  overflow: hidden;
}
.input-content{
  width:84%;
  margin: 30rpx auto;
  font-size: 32rpx;
}
.comment-button{
  width: 94%;
  display: flex;
  justify-content: flex-end;
  text-align: center;
  line-height: 68rpx;
  margin-top: 20rpx;
}
.button-return{
  border: 1rpx #EB5757 solid;
  border-radius: 16rpx;
  width: 122rpx;
  height: 68rpx;
  color: #EB5757;
  background-color: #F2F2F2;
  font-size: 36rpx;
  font-weight: 300;
  margin-right: 20rpx;
}
.button-publish{
  border-radius: 16rpx;
  width: 122rpx;
  height: 68rpx;
  color:white;
  background-color: #6FCF97;
  font-size: 36rpx;
  font-weight: 600;
}
.tab-dormitory{
  width: 25%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 20rpx;
  border-top: 4rpx rgba(170,170,170,1) solid;
}
.tab-treehool{ 
  width: 25%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 20rpx;
  border-top: 4rpx rgba(47,128,237,1) solid;
}
.tab-studyroom{
  width: 25%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 20rpx;
  border-top: 4rpx rgba(170,170,170,1) solid;
}
.tab-usercenter{
  width: 25%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 18rpx;
  border-top: 4rpx rgba(170,170,170,1) solid;
}
.dormitory-img{
  width: 52rpx;
  height: 52rpx;
}
.treehool-img{
  width: 50rpx;
  height: 50rpx;
}
.studyroom-img{
  width: 52rpx;
  height: 52rpx;
}
.usercenter-img{
  width: 52rpx;
  height: 52rpx;
}