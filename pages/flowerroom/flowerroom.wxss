/* pages/flowerroom/flowerroom.wxss */
page{
  width: 100%;
  height: 100%;
  background-color: rgba(254, 250, 238, 1);
}
.birdImg{
  position: fixed;
  top: 20%;
  left: 30%;
  width: 300rpx;
  height: 306rpx;
}
.fertilizerImg{
  position: fixed;
  top: 40%;
  right: 1%;
  width: 234rpx;
  height: 260rpx;
}
.logImg{
  position: fixed;
  top: 4%;
  right: 0;
  width: 256rpx;
  height: 222rpx;
}
.sunImg{
  position: fixed;
  top: 0;
  left: 4%;
  width: 286rpx;
  height: 294rpx;
}
.waterImg{
  position: fixed;
  top: 17%;
  right: -2%;
  width: 372rpx;
  height: 354rpx;
}
.waterMes{
  position: relative;
  top: 46%;
  left: 4%;
  width: 286rpx;
  height: 120rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.waterTipImg{
  width: 120rpx;
  height: 120rpx;
}
.fertilizerMes{
  position: relative;
  top: 26%;
  left: 4%;
  width: 286rpx;
  height: 120rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.fertilizerTipImg{
  width: 120rpx;
  height: 120rpx;
}
.flowerImg{
  width: 140%;
  height: 60%;
  position: fixed;
  left: -20%;
  bottom: -10%;
}
.flowerLevel{
  position: fixed;
  right: 10%;
  bottom: 6%;
  font-size: 60rpx;
  font-weight: 700;
}
.flower-log{
  width: 80%;
  height: 80%;
  position: fixed;
  left: 10%;
  top: 10%;
  background-color: white;
  z-index: 999;
}
.log-tip{
  width: 100%;
  height: 10%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  position: relative;
  box-shadow: 0 4rpx 10rpx rgba(118, 118, 128,0.6);
  font-size: 36rpx;
}
.exit-log{
  width: 64rpx;
  height: 64rpx;
  position: absolute;
  right: 4%;
  top: 20%;
}
.log-flower{
  width: 100%;
  height: 28%;
  overflow: hidden;
}
.log-flower-content{
  width: 80%;
  height: 80%;
  margin:  0 auto;
  display: flex;
  flex-direction: row;
  border-bottom: 2rpx #BDBDBD solid;
  align-items: center;
}
.content-img{
  width: 176rpx;
  height: 176rpx;
}
.content-mes{
  width: 50%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-weight: 600;
}
.log-list{
  width: 100%;
  height: 60%;
  overflow: hidden;
}
.log-row{
  width: 90%;
  margin: 0 auto;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 30rpx;
}
.row-img{
  width: 128rpx;
  height: 128rpx;
}
.row-content{
  width: 70%;
  font-size: 40rpx;
  font-weight: 600;
}