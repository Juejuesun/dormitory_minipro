/* pages/active/active.wxss */
page{
  background-color: rgba(118, 118, 128,0.12);
}
.mes-list{
  width: 100%;
  border-radius: 40rpx;
  background-color: white;
  box-shadow: 0 4rpx 10rpx rgba(118, 118, 128,0.6);
  margin-top: 40rpx;
  margin-bottom: 20rpx;
}
.mes-content{
  width: 84%;
  margin: 0 auto;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  position: relative;
}
.collect-img{
  position: absolute;
  top: 20rpx;
  right: -6%;
  width: 68rpx;
  height: 68rpx;
}
.mes-tip{
  width: 90%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  height: 68rpx;
  margin-top: 20rpx;
  color: rgba(130, 130, 130,1);
  font-size: 34rpx;
}
.mes-text{
  margin: 20rpx 0;
  font-size: 46rpx;
  font-weight: 600;
}
.comment-list{
  width: 100%;
  background-color: white;
  margin: 10rpx 0;
}
.comment-content{
  width: 84%;
  margin: 0 auto;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  position: relative;
}
.comment-tip{
  width: 70%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  height: 68rpx;
  margin-top: 20rpx;
  color: rgba(130, 130, 130,1);
  font-size: 34rpx;
}
.comment-text{
  margin: 20rpx 0;
  font-size: 46rpx;
  font-weight: 500;
}
.comment-img{
  width: 100rpx;
  height: 100rpx;
  position: fixed;
  bottom: 6%;
  right: 6%;
}
.comment-window{
  position: fixed;
  top: 27%;
  width: 100%;
  height: 100%;
  background-color: #E5E5E5;
}
.comment-input{
  width: 90%;
  margin: 0 auto;
  background-color: white;
  height: 30%;
  box-shadow: 6rpx 6rpx 30rpx rgba(118, 118, 128,0.6);
  border-radius: 20rpx;
  overflow: hidden;
}
.input-content{
  width:84%;
  margin: 30rpx auto;
  font-size: 32rpx;
}
.comment-button{
  width: 94%;
  display: flex;
  justify-content: flex-end;
  text-align: center;
  line-height: 68rpx;
  margin-top: 20rpx;
}
.button-return{
  border: 1rpx #EB5757 solid;
  border-radius: 16rpx;
  width: 122rpx;
  height: 68rpx;
  color: #EB5757;
  background-color: #F2F2F2;
  font-size: 36rpx;
  font-weight: 300;
  margin-right: 20rpx;
}
.button-publish{
  border-radius: 16rpx;
  width: 122rpx;
  height: 68rpx;
  color:white;
  background-color: #6FCF97;
  font-size: 36rpx;
  font-weight: 600;
}